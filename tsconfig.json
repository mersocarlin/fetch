{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "moduleResolution": "Node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/fixtures", "lib", "node_modules"]
}
